global
  chroot  /var/lib/haproxy
daemon
<% if not @group.nil? -%>
group <%= @group %>
<% end -%>
<% if not @user.nil? -%>
user <%= @user %>
<% end -%>
log <%= @ip -%> local0
maxconn  4000
pidfile  /var/run/haproxy.pid
stats  socket /var/lib/haproxy/stats

defaults
log  global
maxconn  8000
option  redispatch
retries  3
stats  enable
timeout  http-request 10s
timeout  queue 1m
timeout  connect 10s
timeout  client 1m
timeout  server 1m
timeout  check 10s

<% if @listeners.length > 0 -%>
<% @listeners.each do |listener, attribute| -%>
listen <%= listener %>
bind <%= attribute['ip'] -%>:<%= attribute['port'] -%> ssl crt /etc/ssl/certs/<%= @fqdn -%>.pem
mode <%= attribute['mode'] %>
balance roundrobin
option tcplog
server <%= attribute['server_fqdn'] -%> <%= attribute['server_ip'] -%>:<%= attribute['server_port'] -%> check
<% end -%>
<% end -%>
